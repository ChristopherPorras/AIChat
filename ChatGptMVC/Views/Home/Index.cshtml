@{
    ViewData["Title"] = "Chat Interactivo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Interactivo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/chat.css">
</head>
<body>
    <div class="container chat-container">
        <h2 class="text-center">GymIA Chat</h2>
        <div id="chat-box" class="chat-box"></div>
        <div class="form-group">
            <input type="text" id="user-input" class="form-control" placeholder="Escribe tu mensaje...">
        </div>
        <button id="send-button" class="btn btn-primary btn-block">Enviar</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        const chatUrl = 'https://localhost:7243/api/Gym/chat'; // Asegúrate de que esta URL sea correcta
    </script>
    <script src="~/js/chat.js"></script>
</body>
</html>
